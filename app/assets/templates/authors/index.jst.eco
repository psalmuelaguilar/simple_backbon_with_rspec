<h1> Authors </h1>
<a href="#authors/new" class="button">New Author</a>

<div id="author-table">
  
</div>

<% if @authors.length: %>
  <ul class="c-list">
    <% for author in @authors: %>
      <li class="post-item widget">
        <div class="c-title">
          <h4> <%= author.get("name") %> </h4>
        </div>
      </li>
    <% end %>
  </ul>
<% else: %>
  <h1>Looks like there're no Authors!</h1>
<% end %>